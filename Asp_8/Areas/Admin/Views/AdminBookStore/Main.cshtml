@model BooksListViewModel

<div class="container-fluid">
    <div class="text-center">
        <h1 style="background: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%); min-height: 60px">Admin page</h1>
    </div>

    @if (TempData["N"] != null && TempData["N"]?.ToString() != string.Empty)
    {
        if (TempData["N"]?.ToString()?.Last() == '!')
        {
            <div class="alert alert-danger animate__animated animate__bounceInLeft" role="alert">
                <strong>Success!</strong> @TempData["N"]?.ToString()
            </div>
        }
        else
        {
            <div class="alert alert-success animate__animated animate__bounceInLeft" role="alert">
                <strong>Success!</strong> @TempData["N"]?.ToString()
            </div>
        }

        TempData["N"] = string.Empty;
    }

    <div class="row">
        <div class="col-12 col-md-3">
            @await Component.InvokeAsync("Category")
        </div>
        <div class="col-12 col-md-9">
            <div class="table-responsive">
                <table style="min-height: 450px;" class="min-vh-30 table table-striped table-dark table-hover">
                    <books Area=true Items="@Model.Books" IdItem=12></books>
                </table>
                <books-pager page-count="@Model.PageCount" current-page="@Model.CurrentPage" role="@Model.Role" current-category="@Model.CurrentCategory"></books-pager>
            </div>
        </div>
    </div>
</div>