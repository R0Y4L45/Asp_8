@model string

<div class="container">
    @if (Model != null)
    {
        if (Model.Last() == ')')
        {
            <div class="alert alert-success">
                <strong>Success!</strong> @Model
            </div>
        }
        else if(Model.Last() == '(')
        {
            <div class="alert alert-danger">
                <strong>Success!</strong> @Model
            </div>
        }
    }

    <div class="row align-items-center">
        <div class="col-md-6 my-lg-5">
            <a href="/bookStore/add">Add New</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="">
                <div class="table-responsive">
                    <table class="table table-striped table-dark table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Category</th>
                                <th scope="col">Theme</th>
                                <th scope="col">Author</th>
                                <th scope="col">Press</th>
                                <th scope="col">Price</th>
                                <th scope="col">Count</th>
                                <th scope="col">Description</th>
                                <th scope="col" style="width: 200px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (BookViewModel item in ViewBag.Dt)
                            {
                                <tr>
                                    <td>@item.BookId</td>
                                    <td>@item.Name</td>
                                    <td>@item.Category</td>
                                    <td>@item.Theme</td>
                                    <td>@item.AuthorName  @item.AuthorSurname</td>
                                    <td>@item.Press</td>
                                    <td>@item.Price azn</td>
                                    <td>@item.Count</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <ul class="list-inline mb-0">
                                            <li class="list-inline-item dropdown">
                                                <a class="text-muted dropdown-toggle font-size-18 px-2" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true"><i class="bx bx-dots-vertical-rounded"></i></a>
                                                <div class="dropdown-menu dropdown-menu-end">
                                                    <a class="dropdown-item link-danger" href="/bookStore/delete/@item.BookId">Delete</a><a class="dropdown-item link-info" href="/bookStore/edit/@item.BookId">Edit</a>
                                                </div>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
