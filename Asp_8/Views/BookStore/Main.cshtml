@model Book_messageVM

<div class="container">
    @if (Model != null && Model.Message != null)
    {
        if (Model.Message.Last() == ')')
        {
            <div class="alert alert-success">
                <strong>Success!</strong> @Model
            </div>
        }
        else if (Model.Message.Last() == '(')
        {
            <div class="alert alert-danger">
                <strong>Success!</strong> @Model
            </div>
        }
    }

    <div class="row align-items-center">
        <div class="col-md-6 my-lg-5">
            <a class="btn btn-primary btn-lg btn-block" href="/bookStore/add">Add New</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table style="min-height: 150px;" class="table table-striped table-dark table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th class="text-center" scope="col">Id</th>
                            <th class="text-center" scope="col">Name</th>
                            <th class="text-center" scope="col">Category</th>
                            <th class="text-center" scope="col">Theme</th>
                            <th class="text-center" scope="col">Author</th>
                            <th class="text-center" scope="col">Press</th>
                            <th class="text-center" scope="col">Price</th>
                            <th class="text-center" scope="col">Count</th>
                            <th class="text-center" scope="col">Description</th>
                            <th class="text-center" scope="col" style="width: 200px;">Action</th>
                        </tr>
                    </thead>
                    <books Items="@Model"></books>
                </table>
            </div>
        </div>
    </div>
</div>